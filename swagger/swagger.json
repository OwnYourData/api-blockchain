{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample text.",
    "version": "0.3.0",
    "title": "OwnYourData Blockchain API",
    "contact": {
      "email": "office@ownyourdata.eu"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "blockchain.ownyourdata.eu",
  "basePath": "/api",
  "schemes": [
    "https"
  ],
  "paths": {
    "/doc": {
      "post": {
        "summary": "read or write from blockchain",
        "description": "submit a hash value and check if it is already stored in the blockchain",
        "operationId": "getDoc",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "hash",
            "in": "query",
            "description": "hash value to be queried",
            "required": true
          }
        ],
        "responses": {
          "500": {
            "description": "invalid hash"
          }
        }
      }
    },
    "/status": {
      "get": {
        "summary": "status of blockchain API",
        "description": "get information about the current status of the service",
        "operationId": "getStatus",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "valid"
          }
        }
      }
    }
  }
}